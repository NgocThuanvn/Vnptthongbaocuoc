@model Vnptthongbaocuoc.Controllers.DetailsController.DetailsPageModel
@{
    ViewData["Title"] = "Chi tiết bảng " + Model.Table;
    var moneyCulture = new System.Globalization.CultureInfo("vi-VN");
}

<style>
    .page-wrap {
        max-width: 1280px;
        margin: 24px auto;
        padding: 0 20px;
    }

    .title {  
        font-size: 26px;
        font-weight: 800;
        color: #0f172a;
    }

    .breadcrumb-nav {
        color: #475569;
        font-size: 14px;
        margin-bottom: 4px;
    }

        .breadcrumb-nav a {
            color: #0d6efd;
            text-decoration: none;
        }

            .breadcrumb-nav a:hover {
                text-decoration: underline;
            }

    .toolbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 16px;
    }

    .toolbar-actions {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .searchbar {
        display: flex;
        gap: 8px;
    }

        .searchbar input {
            min-width: 300px;
        }

    /* ====== TABLE ====== */
    .table-box {
        overflow-x: auto;
        border: 1px solid #dee2e6;
        border-radius: 10px;
        background: #fff;
        box-shadow: 0 4px 18px rgba(15,23,42,.06);
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin: 0;
        font-size: 14px;
    } 

        .table th, .table td {
            border: 1px solid #dee2e6;
            padding: 10px 12px;
            vertical-align: middle;
        }

        .table th {
            background: #f8fafc;
            font-weight: 700;
            color: #212529;
            position: sticky;
            top: 0;
            z-index: 2;
        }

        .table tbody tr:nth-child(even) {
            background-color: #fdfdfd;
        }

        .table tbody tr:hover {
            background: #f1f5ff;
        }

    .num {
        text-align: right;
        font-variant-numeric: tabular-nums;
    }

    .center {
        text-align: center;
    }

    .mono {
        font-family: ui-monospace, SFMono-Regular, Menlo, Consolas, "Liberation Mono", monospace;
    }

    .btn-ghost {
        padding: 5px 10px;
        border-radius: 6px;
        border: 1px solid #dee2e6;
        background: #fff;
        font-size: 13px;
        cursor: pointer;
    }

    .form-check-input {
        width: 16px;
        height: 16px;
    }

    @@media (max-width: 992px) {
        .table th, .table td

    {
        padding: 8px 10px;
        font-size: 13px;
    }

    }
</style>

<div class="page-wrap">
    <div class="toolbar">
        <div>
            <div class="breadcrumb-nav">
                <a asp-controller="Tables" asp-action="Index">Danh sách bảng</a> › Chi tiết
            </div>
            <h1 class="title">Bảng: <span class="mono">@Model.Table</span></h1>
        </div>
        <div class="toolbar-actions">
            <form method="get" class="searchbar">
                <input type="hidden" name="table" value="@Model.Table" />
                <input class="form-control" type="text" name="q" value="@Model.Query" placeholder="Tìm Tên file / Tên KH / Địa chỉ..." />
                <button class="btn btn-primary" type="submit">Tìm</button>
            </form>
            <form id="downloadSelectedForm" asp-action="DownloadSelected" asp-controller="Details" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="table" value="@Model.Table" />
                <button type="submit" class="btn btn-success" id="download-selected-btn" disabled>Lưu file đã chọn</button>
            </form>
            <form id="downloadSelectedUntForm" asp-action="DownloadSelectedUnt" asp-controller="Details" method="post" style="display:none;">
                @Html.AntiForgeryToken()
                <input type="hidden" name="table" value="@Model.Table" />
                <div id="download-unt-files"></div>
            </form>
            <button type="button" class="btn btn-secondary" id="download-selected-unt-btn" disabled>Lưu UNT đã chọn</button>
            <form id="downloadSelectedUntNhdtForm" asp-action="DownloadSelectedUntNhdt" asp-controller="Details" method="post" style="display:none;">
                @Html.AntiForgeryToken()
                <input type="hidden" name="table" value="@Model.Table" />
                <div id="download-unt-nhdt-files"></div>
            </form>
            <button type="button" class="btn btn-secondary" id="download-selected-unt-nhdt-btn" disabled>Lưu UNT NHĐT đã chọn</button>
            <form id="sendEmailForm" asp-action="SendEmails" asp-controller="Details" method="post" style="display:none;">
                @Html.AntiForgeryToken()
                <input type="hidden" name="table" value="@Model.Table" />
                <input type="hidden" name="q" value="@Model.Query" />
                <div id="send-email-files"></div>
            </form>
            <button type="button" class="btn btn-outline-primary" id="send-email-btn" disabled>Gửi Email</button>
        </div>
    </div>

    @{
        var emailSummary = TempData["EmailSummary"] as string;
        var emailMessagesList = new System.Collections.Generic.List<string>();
        if (TempData["EmailMessages"] is string emailMessagesRaw && !string.IsNullOrWhiteSpace(emailMessagesRaw))
        {
            foreach (var line in emailMessagesRaw.Split('\n'))
            {
                var trimmed = line?.Trim();
                if (!string.IsNullOrEmpty(trimmed))
                {
                    emailMessagesList.Add(trimmed);
                }
            }
        }
    }

    @if (!string.IsNullOrWhiteSpace(emailSummary))
    {
        <div class="alert alert-info">@emailSummary</div>
    }

    @if (emailMessagesList.Count > 0)
    {
        <div class="alert alert-secondary">
            <ul class="mb-0">
                @foreach (var msg in emailMessagesList)
                {
                    <li>@msg</li>
                }
            </ul>
        </div>
    }

    <div class="table-box">
        <table class="table align-middle">
            <thead>
                <tr>
                    <th style="width:45px;">#</th>
                    <th style="width:110px;text-align:center;">Lệnh</th>
                    <th style="width:50px;text-align:center;">
                        <input type="checkbox" class="form-check-input" id="chkAll" onclick="toggleAll(this)" />
                    </th>
                    <th>Tên file</th>
                    <th>Chu kỳ nợ</th>
                    <th>Tên khách hàng</th>
                    <th>Địa chỉ khách hàng</th>
                    <th class="text-end">Tiền PT</th>
                    <th class="text-end">Số dòng</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Items != null && Model.Items.Any())
                {
                    var i = 0;
                    foreach (var it in Model.Items)
                    {
                        i++;
                        <tr>
                            <td class="center mono">@i</td>
                            <td class="center">
                                <!-- ĐỔI THÀNH CHI TIẾT -->
                                <a class="btn-ghost"
                                   asp-controller="Print"
                                   asp-action="File"
                                   asp-route-table="@Model.Table"
                                   asp-route-file="@it.TenFile">
                                    Chi tiết
                                </a>
                            </td>
                            <td class="center">
                                <input type="checkbox"
                                       class="form-check-input row-chk"
                                       form="downloadSelectedForm"
                                       name="files"
                                       value="@it.TenFile" />
                            </td>
                            <td class="mono">@it.TenFile</td>
                            <td>@(!string.IsNullOrWhiteSpace(it.ChuKyNo) ? it.ChuKyNo : "(trống)")</td>
                            <td>@it.TenKhachHang</td>
                            <td>@it.DiaChiKhachHang</td>
                            <td class="num mono">@Math.Round(it.TongTienPT).ToString("N0", moneyCulture)</td>
                            <td class="num mono">@it.SoLuongDong.ToString("N0")</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="9" class="text-center text-muted py-3">Không có dữ liệu phù hợp.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    function updateSelectionActions() {
        const anyChecked = document.querySelectorAll('.row-chk:checked').length > 0;
        const downloadBtn = document.getElementById('download-selected-btn');
        if (downloadBtn) {
            downloadBtn.disabled = !anyChecked;
        }

        const downloadUntBtn = document.getElementById('download-selected-unt-btn');
        if (downloadUntBtn) {
            downloadUntBtn.disabled = !anyChecked;
        }

        const downloadUntNhdtBtn = document.getElementById('download-selected-unt-nhdt-btn');
        if (downloadUntNhdtBtn) {
            downloadUntNhdtBtn.disabled = !anyChecked;
        }

        const sendEmailBtn = document.getElementById('send-email-btn');
        if (sendEmailBtn) {
            sendEmailBtn.disabled = !anyChecked;
        }
    }

    function toggleAll(master) {
        const checks = document.querySelectorAll('.row-chk');
        checks.forEach(c => c.checked = master.checked);
        updateSelectionActions();
    }

    document.addEventListener('DOMContentLoaded', function () {
        const checks = document.querySelectorAll('.row-chk');
        checks.forEach(c => {
            c.addEventListener('change', updateSelectionActions);
        });
        updateSelectionActions();

        const form = document.getElementById('downloadSelectedForm');
        if (form) {
            form.addEventListener('submit', function (evt) {
                if (document.querySelectorAll('.row-chk:checked').length === 0) {
                    evt.preventDefault();
                    alert('Vui lòng chọn ít nhất một file để lưu.');
                }
            });
        }

        const downloadUntBtn = document.getElementById('download-selected-unt-btn');
        const downloadUntForm = document.getElementById('downloadSelectedUntForm');
        const downloadUntFiles = document.getElementById('download-unt-files');
        if (downloadUntBtn && downloadUntForm && downloadUntFiles) {
            downloadUntBtn.addEventListener('click', function () {
                const checked = document.querySelectorAll('.row-chk:checked');
                if (checked.length === 0) {
                    alert('Vui lòng chọn ít nhất một file để lưu.');
                    return;
                }

                downloadUntFiles.innerHTML = '';
                checked.forEach(function (chk) {
                    const input = document.createElement('input');
                    input.type = 'hidden';
                    input.name = 'files';
                    input.value = chk.value;
                    downloadUntFiles.appendChild(input);
                });

                downloadUntForm.submit();
            });
        }

        const downloadUntNhdtBtn = document.getElementById('download-selected-unt-nhdt-btn');
        const downloadUntNhdtForm = document.getElementById('downloadSelectedUntNhdtForm');
        const downloadUntNhdtFiles = document.getElementById('download-unt-nhdt-files');
        if (downloadUntNhdtBtn && downloadUntNhdtForm && downloadUntNhdtFiles) {
            downloadUntNhdtBtn.addEventListener('click', function () {
                const checked = document.querySelectorAll('.row-chk:checked');
                if (checked.length === 0) {
                    alert('Vui lòng chọn ít nhất một file để lưu.');
                    return;
                }

                downloadUntNhdtFiles.innerHTML = '';
                checked.forEach(function (chk) {
                    const input = document.createElement('input');
                    input.type = 'hidden';
                    input.name = 'files';
                    input.value = chk.value;
                    downloadUntNhdtFiles.appendChild(input);
                });

                downloadUntNhdtForm.submit();
            });
        }

        const sendEmailBtn = document.getElementById('send-email-btn');
        const sendEmailForm = document.getElementById('sendEmailForm');
        const sendEmailFilesContainer = document.getElementById('send-email-files');
        if (sendEmailBtn && sendEmailForm && sendEmailFilesContainer) {
            sendEmailBtn.addEventListener('click', function () {
                const checked = document.querySelectorAll('.row-chk:checked');
                if (checked.length === 0) {
                    alert('Vui lòng chọn ít nhất một file để gửi email.');
                    return;
                }

                sendEmailFilesContainer.innerHTML = '';
                checked.forEach(function (chk) {
                    const input = document.createElement('input');
                    input.type = 'hidden';
                    input.name = 'files';
                    input.value = chk.value;
                    sendEmailFilesContainer.appendChild(input);
                });

                sendEmailForm.submit();
            });
        }
    });
</script>
