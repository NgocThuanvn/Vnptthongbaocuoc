@{
    ViewData["Title"] = "Trang chủ";
}

<div class="container py-4">
    <h1 class="mb-4">Trang chủ</h1>

    <div class="row g-3">
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Cấu hình Mail</h5>
                    <p class="card-text text-muted">
                        Thiết lập máy chủ SMTP và gửi thư thử nghiệm cho hệ thống.
                    </p>
                    <div class="mt-auto">
                        <a class="btn btn-primary" asp-controller="MailSettings" asp-action="Index">
                            Đi tới cài đặt mail
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Gửi mail thử</h5>
                    <p class="card-text text-muted">
                        Tạo nội dung kiểm tra và gửi ngay tới địa chỉ mong muốn để đảm bảo cấu hình hoạt động.
                    </p>
                    <div class="mt-auto">
                        <a class="btn btn-outline-primary" asp-controller="MailTest" asp-action="Index">
                            Đi tới trang gửi mail thử
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
